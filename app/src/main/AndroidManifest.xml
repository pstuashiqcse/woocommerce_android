<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mcc.eshopper">

    <!-- network permissions -->
    <uses-permission android:title="android.permission.INTERNET" />
    <uses-permission android:title="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:title=".activity.general.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:title="android.intent.action.MAIN" />
                <category android:title="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:title=".activity.product.ProductCategory"></activity>
        <activity android:title=".activity.product.ProductList"></activity>
        <activity android:title=".activity.product.ProductDetails"></activity>

    </application>

</manifest>
