<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/grid_padding"
    android:paddingBottom="@dimen/grid_padding"
    android:paddingRight="@dimen/grid_padding"
    android:paddingLeft="@dimen/grid_padding">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cv_productlist">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/im_productlist"
                android:layout_width="@dimen/image_width"
                android:layout_height="@dimen/image_width" />

            <TextView
                android:id="@+id/tv_productlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Product"
                android:textAlignment="center"
                android:layout_below="@+id/im_productlist"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>


