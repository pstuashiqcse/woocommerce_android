<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.product.ProductList"
    tools:showIn="@layout/activity_product_list">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_product_list"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="64dp">

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_productlist_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/cardview_margin"
        android:layout_marginLeft="@dimen/cardview_margin"
        android:layout_marginRight="@dimen/cardview_margin"
        android:layout_marginBottom="@dimen/cardview_margin"
        android:layout_below="@id/toolbar_product_list">

        <TextView
            android:id="@+id/tv_top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product List"
            android:background="@drawable/drawable_rounded_corner"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_margin="5dp"/>
        </android.support.v7.widget.CardView>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_product_list"
        android:layout_below="@+id/cv_productlist_top_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>



